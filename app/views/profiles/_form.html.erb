<%= form_for(profile, class: "form-group") do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :backup_paths %>
    <%= f.text_field :backup_paths, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :exclusion_paths %>
    <%= f.text_field :exclusion_paths, class: "form-control"  %>
  </div>

  <%= f.submit f.object.new_record? ? "Create profile" : "Update profile", class: "btn btn-default" %>
<% end %>
