<p>
  Enter your detail below to start backup your files
  or <%= link_to "Sign Up", new_user_registration_path %> if you don't have any account
</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group") do |f| %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <label>
        <%= f.check_box :remember_me %> Remember me
      </label>
    </div>
  <% end -%>

  <button type="submit" class="btn btn-default">Submit</button>
<% end %>

<br/>
<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name) %><br />
<% end %>
