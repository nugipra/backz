<h2>Forgot Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "form-group", html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-default">Send me reset password instructions</button>
<% end %>
